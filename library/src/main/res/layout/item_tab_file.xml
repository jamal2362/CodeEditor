<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:platform="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/fake_transparent"
        android:textSize="@dimen/dialog_text_size_medium"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:maxLines="1"
        android:maxWidth="@dimen/tab_max_text_width"
        android:ellipsize="end"
        android:padding="@dimen/padding_small"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:contentDescription="@string/close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:tint="@color/fake_transparent"
        platform:srcCompat="@drawable/ic_tab_close"/>

</LinearLayout>